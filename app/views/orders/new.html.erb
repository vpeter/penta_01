<h1>Új megrendelés</h1><br />

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :town %><br />
    <%= f.text_field :town %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.submit 'Megrendelem én' %>
  </p>
<% end %>
<% @cart.each do |item| %>
  <p>
    <%= item.first.title + "    " + item.last.to_s + "    " + item.first.price.to_s  %>
  </p>
<% end %>


<%= link_to 'Back', orders_path %>